# This file is used to store environment variables for the backend server.
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GOOGLE_APPLICATION_CREDENTIALS=your-google-application-credentials
# Примечание: Значение GOOGLE_TRANSLATE_API_KEY должно быть корректным API ключом Google Translate
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

OPENAI_API_KEY=your-openai-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
STRIPE_API_KEY=sk_test_your-stripe-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

PORT=3000
DATABASE_URL=postgres://postgres:password@localhost:5432/hostel_db?sslmode=disable
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:3000/auth/google/callback
FRONTEND_URL=http://localhost:3001
APP_MODE=development

MIGRATIONS_PATH=migrations
MIGRATION_DIRECTION=up
MIGRATION_TARGET=
MIGRATIONS_FIXTURES_PATH=fixtures
MIGRATIONS_FIXTURES_TABLE=schema_fixtures

# Migrations on API startup: off, schema, full
# off - no migrations on startup (default)
# schema - run schema migrations only
# full - run schema migrations and fixtures
MIGRATIONS_ON_API=off

FILE_STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=listings
MINIO_LOCATION=eu-central-1
FILE_STORAGE_PUBLIC_URL=https://svetu.rs

OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_MARKETPLACE_INDEX=marketplace

EMAIL_PASSWORD=your-email-password
SVETU_APP_ENV=dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=1
DOCS_ROOT_PATH=.

# Log Configuration
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_CATEGORIES_TTL=6h
REDIS_ATTRIBUTES_TTL=4h
REDIS_ATTRIBUTE_GROUP_TTL=4h

# MinIO Public URL
MINIO_PUBLIC_URL=http://localhost:9000

# Claude API Key (optional)
CLAUDE_API_KEY=your-claude-api-key

# DeepL API Key (optional)
DEEPL_API_KEY=your-deepl-api-key
DEEPL_USE_FREE_API=true

# AllSecure Payment Gateway Configuration
ALLSECURE_BASE_URL=https://asxgw.com
ALLSECURE_USERNAME=your_api_username
ALLSECURE_PASSWORD=your_api_password
ALLSECURE_WEBHOOK_URL=https://svetu.rs/api/v1/webhooks/allsecure
ALLSECURE_WEBHOOK_SECRET=your_webhook_secret
ALLSECURE_TIMEOUT=30
ALLSECURE_COMMISSION_RATE=0.05
ALLSECURE_ESCROW_DAYS=7
ALLSECURE_SANDBOX_MODE=true

# BEX Express Integration
BEX_API_URL=https://bexexpress.rs/api
BEX_AUTH_TOKEN=your_auth_token_here
BEX_CLIENT_ID=your_client_id_here