# Development Environment Configuration
# Copy this file to .env.dev and fill in your values

# Database
DATABASE_URL=postgres://postgres:dev_password_123@db-dev:5432/hostel_db_dev?sslmode=disable
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=hostel_db_dev

# Redis
REDIS_URL=redis://redis-dev:6379

# OpenSearch
OPENSEARCH_URL=http://opensearch-dev:9200
OPENSEARCH_MARKETPLACE_INDEX=marketplace_dev

# MinIO S3 Storage
MINIO_ENDPOINT=minio-dev:9000
MINIO_ACCESS_KEY=devminioadmin
MINIO_SECRET_KEY=devminiopassword123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=listings
MINIO_LOCATION=eu-central-1
FILE_STORAGE_PUBLIC_URL=https://dev.svetu.rs

# JWT & Sessions
JWT_SECRET=dev_jwt_secret_key_very_long_and_secure_change_in_production
SESSION_SECRET=dev_session_secret_key_change_in_production

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://dev.svetu.rs/auth/google/callback

# Frontend URLs
FRONTEND_URL=https://dev.svetu.rs
CORS_ALLOWED_ORIGINS=https://dev.svetu.rs,http://localhost:3002,http://localhost:3003

# Application
APP_MODE=development
APP_PORT=3002

# WebSocket
WS_ENABLED=true

# Payments (disabled for dev)
NEXT_PUBLIC_ENABLE_PAYMENTS=false

# Email settings (optional for dev)
SMTP_HOST=mailserver
SMTP_PORT=587
SMTP_USER=noreply@svetu.rs
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@svetu.rs

# Stripe (optional for dev)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Build args
GIT_COMMIT=dev
BUILD_TIME=dev
