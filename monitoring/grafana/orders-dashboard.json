{
  "dashboard": {
    "title": "Orders Microservice - Performance Metrics",
    "tags": ["orders", "grpc", "performance"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Orders RPC Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(grpc_server_handled_total{grpc_service=\"listings.v1.OrdersService\"}[5m])",
            "legendFormat": "{{grpc_method}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "Orders RPC Latency (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(grpc_server_handling_seconds_bucket{grpc_service=\"listings.v1.OrdersService\"}[5m]))",
            "legendFormat": "{{grpc_method}} (p95)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "alert": {
          "name": "High P95 Latency",
          "conditions": [
            {
              "evaluator": {
                "type": "gt",
                "params": [0.2]
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "P95 latency exceeded 200ms for Orders operations",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 3,
        "title": "Orders RPC Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(grpc_server_handled_total{grpc_service=\"listings.v1.OrdersService\",grpc_code!=\"OK\"}[5m]) / rate(grpc_server_handled_total{grpc_service=\"listings.v1.OrdersService\"}[5m])",
            "legendFormat": "{{grpc_method}} - {{grpc_code}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            }
          }
        },
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {
                "type": "gt",
                "params": [0.01]
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "Error rate exceeded 1% for Orders operations",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 4,
        "title": "Orders by Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(orders_total) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Cart Operations Throughput",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(grpc_server_handled_total{grpc_method=\"AddToCart\"}[5m])",
            "legendFormat": "AddToCart",
            "refId": "A"
          },
          {
            "expr": "rate(grpc_server_handled_total{grpc_method=\"GetCart\"}[5m])",
            "legendFormat": "GetCart",
            "refId": "B"
          },
          {
            "expr": "rate(grpc_server_handled_total{grpc_method=\"RemoveFromCart\"}[5m])",
            "legendFormat": "RemoveFromCart",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "title": "Order Creation Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(grpc_server_handling_seconds_bucket{grpc_method=\"CreateOrder\"}[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(grpc_server_handling_seconds_bucket{grpc_method=\"CreateOrder\"}[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(grpc_server_handling_seconds_bucket{grpc_method=\"CreateOrder\"}[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "db_connections_open",
            "legendFormat": "Open Connections",
            "refId": "A"
          },
          {
            "expr": "db_connections_in_use",
            "legendFormat": "In Use",
            "refId": "B"
          },
          {
            "expr": "db_connections_idle",
            "legendFormat": "Idle",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "Redis Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(redis_cache_hits[5m]) / (rate(redis_cache_hits[5m]) + rate(redis_cache_misses[5m]))",
            "legendFormat": "Hit Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.9, "color": "green"}
              ]
            },
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 9,
        "title": "API Response Time Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(grpc_server_handling_seconds_bucket{grpc_service=\"listings.v1.OrdersService\"}[5m])",
            "legendFormat": "{{grpc_method}}",
            "refId": "A",
            "format": "heatmap"
          }
        ]
      },
      {
        "id": 10,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"orders-service\"}[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 11,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"orders-service\"}",
            "legendFormat": "Memory",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 12,
        "title": "Goroutines",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 48},
        "targets": [
          {
            "expr": "go_goroutines{job=\"orders-service\"}",
            "legendFormat": "Goroutines",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 13,
        "title": "GC Pause Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 48},
        "targets": [
          {
            "expr": "rate(go_gc_duration_seconds_sum{job=\"orders-service\"}[5m])",
            "legendFormat": "GC Pause",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "interval",
          "type": "interval",
          "query": "1m,5m,10m,30m,1h",
          "current": {
            "text": "5m",
            "value": "5m"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Orders.*\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "alertname"
        }
      ]
    }
  },
  "overwrite": true
}
