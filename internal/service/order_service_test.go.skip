// Test UpdateOrderStatus
func TestUpdateOrderStatus_Success(t *testing.T) {
	mockOrderRepo := new(MockOrderRepository)
	logger := zerolog.Nop()

	order := &domain.Order{
		ID:          1,
		OrderNumber: "ORD-2025-000001",
		Status:      domain.OrderStatusPending,
	}

	updatedOrder := &domain.Order{
		ID:          1,
		OrderNumber: "ORD-2025-000001",
		Status:      domain.OrderStatusConfirmed,
	}

	mockOrderRepo.On("GetByID", mock.Anything, int64(1)).Return(order, nil).Once()
	mockOrderRepo.On("UpdateStatus", mock.Anything, int64(1), domain.OrderStatusConfirmed).Return(nil).Once()
	mockOrderRepo.On("GetByID", mock.Anything, int64(1)).Return(updatedOrder, nil).Once()

	service := &orderService{
		orderRepo: mockOrderRepo,
		logger:    logger,
	}

	result, err := service.UpdateOrderStatus(context.Background(), 1, domain.OrderStatusConfirmed)

	assert.NoError(t, err)
	assert.NotNil(t, result)
	assert.Equal(t, domain.OrderStatusConfirmed, result.Status)
	mockOrderRepo.AssertExpectations(t)
}

// Test UpdateOrderStatus_InvalidTransition
func TestUpdateOrderStatus_InvalidTransition(t *testing.T) {
	mockOrderRepo := new(MockOrderRepository)
	logger := zerolog.Nop()

	order := &domain.Order{
		ID:          1,
		OrderNumber: "ORD-2025-000001",
		Status:      domain.OrderStatusDelivered, // Already delivered
	}

	mockOrderRepo.On("GetByID", mock.Anything, int64(1)).Return(order, nil).Once()

	service := &orderService{
		orderRepo: mockOrderRepo,
		logger:    logger,
	}

	// Try to move back to pending (invalid transition)
	result, err := service.UpdateOrderStatus(context.Background(), 1, domain.OrderStatusPending)

	assert.Error(t, err)
	assert.Nil(t, result)
	var orderCannotUpdateErr *ErrOrderCannotUpdateStatus
	assert.ErrorAs(t, err, &orderCannotUpdateErr)
	mockOrderRepo.AssertExpectations(t)
}
