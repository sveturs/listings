# API Configuration
NEXT_PUBLIC_API_URL=http://host.docker.internal:3000

# Internal API URL for SSR requests from within container
NEXT_PUBLIC_INTERNAL_API_URL=http://host.docker.internal:3000

# MinIO Configuration (optional, defaults to http://host.docker.internal:9000)
NEXT_PUBLIC_MINIO_URL=http://host.docker.internal:9000

# Image domains configuration
# Список доменов через запятую для загрузки изображений
# Формат: protocol:hostname:port,protocol:hostname:port
# Пример: http:localhost:9000,https:svetu.rs:443,http:localhost:3000
NEXT_PUBLIC_IMAGE_HOSTS=http:host.docker.internal:9000,https:svetu.rs:443,http:host.docker.internal:3000

# Path pattern для изображений (по умолчанию /listings/**)
NEXT_PUBLIC_IMAGE_PATH_PATTERN=/listings/**

# WebSocket URL for chat
NEXT_PUBLIC_WS_URL=ws://host.docker.internal:3000
