# Prometheus Monitoring Stack - Environment Variables
# Copy this file to .env and update with your values

# ===================================================================
# GRAFANA CONFIGURATION
# ===================================================================

# Admin credentials (CHANGE IN PRODUCTION!)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=ChangeMe123!

# Server configuration
GRAFANA_SERVER_ROOT_URL=http://localhost:3030
GRAFANA_SERVER_DOMAIN=localhost

# ===================================================================
# PROMETHEUS CONFIGURATION
# ===================================================================

# Retention settings
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_RETENTION_SIZE=100GB

# External URL (for reverse proxy)
PROMETHEUS_EXTERNAL_URL=http://localhost:9090

# ===================================================================
# ALERTMANAGER CONFIGURATION
# ===================================================================

# Notification channels
PAGERDUTY_CRITICAL_KEY=your_pagerduty_integration_key_here
PAGERDUTY_SLO_KEY=your_pagerduty_slo_key_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL_WARNINGS=#alerts-warnings
SLACK_CHANNEL_INFO=#alerts-info

# Email settings
SMTP_FROM=alerts@vondi.rs
SMTP_SMARTHOST=localhost:25
EMAIL_PLATFORM_TEAM=platform-team@vondi.rs

# ===================================================================
# DATABASE EXPORTER CONFIGURATION
# ===================================================================

# PostgreSQL connection
POSTGRES_EXPORTER_DSN=postgresql://postgres:mX3g1XGhMRUZEX3l@host.docker.internal:5432/svetubd?sslmode=disable

# Redis connection
REDIS_ADDR=host.docker.internal:6379
REDIS_PASSWORD=

# ===================================================================
# OPENSEARCH EXPORTER CONFIGURATION (if needed)
# ===================================================================

OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=
OPENSEARCH_PASSWORD=

# ===================================================================
# NETWORK CONFIGURATION
# ===================================================================

# Ports (change if conflicts with existing services)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3030
ALERTMANAGER_PORT=9093
NODE_EXPORTER_PORT=9100
POSTGRES_EXPORTER_PORT=9187
REDIS_EXPORTER_PORT=9121
BLACKBOX_EXPORTER_PORT=9115

# ===================================================================
# RESOURCE LIMITS
# ===================================================================

# Prometheus
PROMETHEUS_CPU_LIMIT=2
PROMETHEUS_MEMORY_LIMIT=4G

# Grafana
GRAFANA_CPU_LIMIT=1
GRAFANA_MEMORY_LIMIT=1G

# Alertmanager
ALERTMANAGER_CPU_LIMIT=0.5
ALERTMANAGER_MEMORY_LIMIT=512M

# ===================================================================
# SECURITY
# ===================================================================

# Enable authentication (for production)
ENABLE_AUTH=false

# TLS/SSL
ENABLE_TLS=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# ===================================================================
# ADVANCED SETTINGS
# ===================================================================

# Logging
LOG_LEVEL=info

# Remote write (for long-term storage)
ENABLE_REMOTE_WRITE=false
REMOTE_WRITE_URL=http://thanos-receiver:19291/api/v1/receive

# Federation
ENABLE_FEDERATION=false
FEDERATE_FROM=http://prometheus-primary:9090

# ===================================================================
# DEVELOPMENT SETTINGS
# ===================================================================

# Skip placeholder validation (for development only)
SKIP_PLACEHOLDER_VALIDATION=true

# Enable debug mode
DEBUG_MODE=false
